<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<PackageId>ExcelExporter</PackageId>
		<Version>1.0.3</Version>
		<Authors>Kishore</Authors>
		<Company>Kishore</Company>
		<Description>Reusable Excel export library using ClosedXML and Newtonsoft.Json, performance upgrade using cache and data range insert and implemented grouped sheets for cleaner view.</Description>
		<PackageOutputPath>.\nupkg</PackageOutputPath>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>

		<!-- NuGet-specific metadata -->
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="ClosedXML" Version="0.105.0" />
		<PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
	</ItemGroup>

	<!-- Include README and LICENSE in the package -->
	<ItemGroup>
		<None Include="README.md" Pack="true" PackagePath="" />
		<None Include="LICENSE.txt" Pack="true" PackagePath="" />
	</ItemGroup>

</Project>
